package com.app.pojos;

import java.util.Date;
import java.util.List;

import javax.persistence.*;

import org.springframework.format.annotation.DateTimeFormat;

import com.fasterxml.jackson.annotation.JsonBackReference;
import com.fasterxml.jackson.annotation.JsonFormat;

@Entity

public class Topic {
	private Integer id;
	private String tname;
	private String description;
	@JsonFormat(pattern = "yyyy-MM-dd")
	@DateTimeFormat(pattern = "yyyy-MM-dd")
	private Date modifiedOn;
	private Subject subject;
	private List<Question> question;
	public Topic() {
		
	}
	
	public Topic(String tname, String description, Date modifiedOn) {
		super();
		this.tname = tname;
		this.description = description;
		this.modifiedOn = modifiedOn;
	}

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	public Integer getId() {
		return id;
	}

	public void setId(Integer id) {
		this.id = id;
	}
	
	@Column(nullable=false)
	public String getTname() {
		return tname;
	}

	

	public void setTname(String tname) {
		this.tname = tname;
	}
	@Column(length=1000)
	public String getDescription() {
		return description;
	}


	public void setDescription(String description) {
		this.description = description;
	}

	@Temporal(TemporalType.DATE)
    public Date getModifiedOn() {
		return modifiedOn;
	}

	public void setModifiedOn(Date modifiedOn) {
		this.modifiedOn = modifiedOn;
	}

	@ManyToOne
    @JoinColumn(name = "s_id")
	public Subject getSubject() {
		return subject;
	}


	public void setSubject(Subject subject) {
		this.subject = subject;
	}
	@JsonBackReference
	@OneToMany(mappedBy = "topic",cascade = CascadeType.ALL,orphanRemoval = true,fetch = FetchType.EAGER)
	public List<Question> getQuestion() {
		return question;
	}

	public void setQuestion(List<Question> question) {
		this.question = question;
	}

	@Override
	public String toString() {
		return "Topic [id=" + id + ", tname=" + tname + ", description=" + description + ", modifiedOn=" + modifiedOn
				+ "]";
	}

	


	

}